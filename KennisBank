package EindProduct;

import java.util.ArrayList;
import java.util.Scanner;

public class KennisBank {

    /*  Deze applicatie is bedoeld voor gebruikers om een kennisbank te raadplegen.
        Zij kunnen ook zelf onderwerpen en oplossingen toevoegen.
        Ook kunnen zij zelf ondwerpen, of oplossingen verwijderen via het menu.
     */

    // Arraylist voor het onderwerp van eigen kennisbank-items
    ArrayList kbOnderwerp = new ArrayList<String>();

    // Arraylist voor de oplossingen van eigen kennisbank-items
    ArrayList kbOplossingen = new ArrayList<String>();

    public static void main(String[] args) {
        new KennisBank().run();
    }

    public void run() {
        Scanner kbmenu = new Scanner(System.in);

        // Zet de variabele op -1. Als de menukeuze boven 0 is, voer de keuze in het menu uit.
        int menuKeuze = -1;
        while (menuKeuze != 0) {
            // Menu-opties voor de gebruiker van de kennisbank.

            System.out.println("1) PC start niet op.");
            System.out.println("2) Probleem of foutmelding in Windows of in een bedrijfsapplicatie.");
            System.out.println("3) Langskomen bij de balie van de Servicedesk.");
            System.out.println("4) Prio 1 storing melden.");
            System.out.println("5) Overige problemen of vragen.");
            System.out.println("6) Eigen kennisbank-items toevoegen.");
            System.out.println("7) Eigen kennisbank-items verwijderen.");
            System.out.println("8) Eigen kennisbank-items bekijken.");
            System.out.println("0) Kennisbank-applicatie afsluiten.");
            // Input van een cijfer/integer door de gebruiker.
            menuKeuze = kbmenu.nextInt();
            if (menuKeuze == 1) {
                // Standaardoplossing 1 in het menu.
                System.out.println("**********");
                System.out.println("**********");
                System.out.println("** Keuze 1 is gemaakt");
                System.out.println("** Mogelijke oplossingen & alternatieven");
                System.out.println("- Controleer of de stekkers van het beeldscherm en de PC goed er in zitten.");
                System.out.println("- Controleer of de lampjes branden op het beeldscherm en de PC.");
                System.out.println("- Mocht dit geen oplossing bieden, neem dan contact op met de Servicedesk via 055-580 1234.");
                System.out.println("**********");
                System.out.println("**********");
            } else if (menuKeuze == 2) {
                // Standaardoplossing 2 in het menu.
                System.out.println("**********");
                System.out.println("**********");
                System.out.println("** Keuze 2 is gemaakt");
                System.out.println("** Mogelijke oplossingen & alternatieven");
                System.out.println("- Stuur hiervoor een mail naar 1234servicepunt@apeldoorn.nl of neem contact op met de Servicedesk via 055-580 1234.");
                System.out.println("- Noteer een duidelijke omschrijving van de foutmelding of het probleem in de mail, of voeg een schermprint toe.");
                System.out.println("**********");
                System.out.println("**********");
            } else if (menuKeuze == 3) {
                // Standaardoplossing 3 in het menu.
                System.out.println("**********");
                System.out.println("**********");
                System.out.println("** Keuze 3 is gemaakt");
                System.out.println("** Als je met een storing of vraag wil langskomen bij de balie van de Servicedesk, dan is dit ook mogelijk.");
                System.out.println("- Je kunt de balie van de Servicedesk vinden op de 3de etage van het Stadhuis. Bouwdeel 3D.");
                System.out.println("- Je hoeft hiervoor geen afspraak te maken.");
                System.out.println("**********");
                System.out.println("**********");
            } else if (menuKeuze == 4) {
                // Standaardoplossing 4 in het menu.
                System.out.println("**********");
                System.out.println("**********");
                System.out.println("** Keuze 4 is gemaakt");
                System.out.println("** Prio 1 storingen kunnen gemeld worden bij storingen met een hoge impact of urgentie");
                System.out.println("- Neem contact op met de Servicedesk via 055-580 1234.");
                System.out.println("- Indien de Servicedesk niet direct te bereiken is, kan er contact op worden genomen met de incidentmanager via 055-580 1449.");
                System.out.println("**********");
                System.out.println("**********");
            } else if (menuKeuze == 5) {
                // Standaardoplossing 5 in het menu.
                System.out.println("**********");
                System.out.println("**********");
                System.out.println("** Keuze 5 is gemaakt");
                System.out.println("** Mogelijke oplossingen & alternatieven");
                System.out.println("- Stuur hiervoor een mail naar 1234servicepunt@apeldoorn.nl of neem contact op met de Servicedesk via 055-580 1234.");
                System.out.println("- Noteer een duidelijke omschrijving van de foutmelding, probleem of een vraag in de mail, of voeg een schermprint toe.");
                System.out.println("**********");
                System.out.println("**********");
            } else if (menuKeuze == 6) {
                // Menu keuze om kennisbank-onderwerpen en oplossingen toe te voegen.
                System.out.println("Keuze 6 is gemaakt");
                // Ga naar de class om onderwerpen en oplossingen toe te voegen.
                kbToevoegen();
            } else if (menuKeuze == 7) {
                // Menu keuze om kennisbank-onderwerpen te verwijderen.
                System.out.println("Keuze 7 is gemaakt");
                // Ga naar de class om onderwerpen te verwijderen.
                kbOnderwerpenVerwijderen();
            } else if (menuKeuze == 8) {
                // Menu keuze om kennisbank-items te bekijken.
                System.out.println("Keuze 8 is gemaakt");
                System.out.print("Onderwerp(en): ");
                // Print de arraylist met onderwerpen.
                System.out.println(kbOnderwerp);
                // Print de arraylist met oplossingen.
                System.out.print("Oplossing(en): ");
                System.out.println(kbOplossingen);
                // Menu keuze om de kennisbank-applicatie te sluiten.
            } else if (menuKeuze == 0) {
                // Ga naar de class,om de kennisbank-applicatie af te sluiten.
                kbAfsluiten();
            }
        }
    }

    public void kbToevoegen() {
        // Voeg het onderwerp toe.
        System.out.println("Welk onderwerp wil je toevoegen aan de kennisbank?");
        // Input voor het onderwerp.
        Scanner onderwerpToevoegen = new Scanner(System.in);
        // Voeg de input voor het onderwerp toe aan de eerste ArrayList
        String kbEigenonderwerp = onderwerpToevoegen.nextLine();
        kbOnderwerp.add(kbEigenonderwerp);
        // Voeg de oplossing toe aan het onderwerp
        System.out.println("Wat is de oplossing bij dit onderwerp?");
        // Input voor de oplossing.
        Scanner oplossingToevoegen = new Scanner(System.in);
        // Voeg de input voor de oplossing toe aan de tweede ArrayList
        String kbEigenoplossingen = oplossingToevoegen.nextLine();
        kbOplossingen.add(kbEigenoplossingen);
        // Print uit dat het kennisbank-item en de oplossing zijn toegevoegd.
        System.out.println(kbEigenonderwerp + " is toegevoegd aan de kennisbank.");
        System.out.println("De oplossing " + kbEigenoplossingen + " is daar aan toegevoegd.");
        // Ga terug naar het begin.
        run();
    }

    public void kbOnderwerpenVerwijderen() {
        // Input voor het verwijderen van kennisbank-onderwerpen.
        Scanner kbOnderwerpverwijder = new Scanner(System.in);
        // Check de onderwerp-array of deze leeg is. Zo ja, ga terug. Indien nee, ga naar de else-statement.
        if (kbOnderwerp.isEmpty()) {
            System.out.println("Je hebt geen kennisbank-onderwerpen toegevoegd");
            run();
        } else
            // Input om kennisbank-onderwerpen te verwijderen en toon deze.
            System.out.println("Welke kennisbank-onderwerpen wil je verwijderen?");
            System.out.println(kbOnderwerp);
            // Verwijder het onderwerp uit de array, uit de positie in de array.
            String ondVerwijder = kbOnderwerpverwijder.nextLine();
        if (kbOnderwerp.contains(ondVerwijder)) {
            int ondPlek = kbOnderwerp.indexOf(ondVerwijder);
            kbOnderwerp.remove(ondPlek);
            // Print uit dat het onderwerp is verwijderd.
            System.out.println(ondVerwijder + " is verwijderd. Verwijder nu de oplossing.");
            // Ga verder naar het verwijderen van de oplossing.
            kbOplossingverwijderen();
        } else
            System.out.println("Dit kennisbank-onderwerp is niet toegevoegd");
    }

    public void kbOplossingverwijderen() {
        // Input voor het verwijderen van kennisbank-oplossingen.
        Scanner kbOnderwerpverwijder = new Scanner(System.in);
        // Check de oplossingen-array of deze leeg is. Zo ja, ga terug. Indien nee, ga naar de else-statement.
        if (kbOplossingen.isEmpty()) {
            System.out.println("Je hebt geen kennisbank-oplossingen toegevoegd");
            run();
        } else
            // Input om kennisbank-oplossingen te verwijderen en toon deze.
            System.out.println("Welke kennisbank-oplossing wil je verwijderen?");
            System.out.println(kbOplossingen);
            // Verwijder de oplossing uit de array, uit de positie in de array.
            String oplVerwijder = kbOnderwerpverwijder.nextLine();
        if (kbOplossingen.contains(oplVerwijder)) {
            int oplPlek = kbOplossingen.indexOf(oplVerwijder);
            kbOplossingen.remove(oplPlek);
            // Print uit dat de oplossing is verwijderd.
            System.out.println(oplVerwijder + " is verwijderd");
            // Ga terug naar het begin.
            run();
        } else
            System.out.println("Deze kennisbank-oplossing is niet toegevoegd");
            // Ga terug naar het begin.
            run();
    }

    public void kbAfsluiten() {
        // Afsluitende tekst voor de kennisbank-applicatie.
        System.out.println("**********");
        System.out.println("**********");
        System.out.println("** De kennisbank-applicatie wordt afgesloten");
        System.out.println("** Voor vragen of opmerkingen kun je mailen naar kennisbank@apeldoorn.nl");
        System.out.println("**********");
        System.out.println("**********");
        // Zorg er voor dat de applicatie wordt afgesloten.
        System.exit(0);
    }
}
